.side-bar
  .header
    .header__box
      %p.header__box__name
        = current_user.name
      %ul.header__box__lists
        %li.header__box__lists__create-group
          = link_to new_group_path do
            = icon('fa', 'edit',class: 'icon')
        %li.header__box__lists__edit-group
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog',class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__info
            = group.show_last_message